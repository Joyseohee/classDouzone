package quiz;

import java.util.Scanner;

// 윤년/평년 판정 프로그램 작성
/*
 * if ( 년도 % 4 == 0 )
 * 		if (( 년도 % 100 != 0 ) \\ ( 년도 %400 == 0 ))
 * 
 */

public class IfQuiz {
	public static void main(String[] args) {
		System.out.println("년도를 입력하세요.");
		Scanner sc = new Scanner(System.in);
		int y = sc.nextInt();
		
		if ( y % 4 == 0 )  {
			if ((y % 100 != 0) || (y % 400 == 0))
		}
		
		
	}
}
